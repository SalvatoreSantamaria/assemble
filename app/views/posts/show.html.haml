%p#notice= notice

%p
  %b Title:
  = @post.title
%p
  %b Body:
  = @post.body
%p
  %b Author:
  = @post.author

= link_to 'Edit', edit_post_path(@post)
\|
= link_to 'Back', posts_path

%section.section.comments
  .container
    %h2.subtitle.is-5
      %strong= @post.comments.count
      Comments
    = render @post.comments
    .comment-form
      %hr/
      %h3.subtitle.is-3 Leave a reply
      = render partial: 'comments/form', locals: { comment: @post.comments.build }

